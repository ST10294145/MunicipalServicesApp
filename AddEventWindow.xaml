<Window x:Class="MunicipalServicesApp.AddEventWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Event" Height="400" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Add New Event" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

            <!-- Use TextBox with default text + events for placeholder effect -->
            <TextBox x:Name="txtTitle" Text="Event Title" Foreground="Gray" Margin="0,0,0,10"
                     GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
            <TextBox x:Name="txtCategory" Text="Category" Foreground="Gray" Margin="0,0,0,10"
                     GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
            <DatePicker x:Name="dpDate" Margin="0,0,0,10"/>
            <TextBox x:Name="txtDescription" Text="Description" Foreground="Gray" Height="80" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,20"
                     GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Save" Width="100" Margin="5" Click="btnSave_Click"/>
                <Button Content="Cancel" Width="100" Margin="5" Click="btnCancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
