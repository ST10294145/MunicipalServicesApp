<Window x:Class="MunicipalServicesApp.AddEventWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Event" Height="400" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Add New Event" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBox x:Name="txtTitle" PlaceholderText="Event Title" Margin="0,0,0,10"/>
            <TextBox x:Name="txtCategory" PlaceholderText="Category" Margin="0,0,0,10"/>
            <DatePicker x:Name="dpDate" Margin="0,0,0,10"/>
            <TextBox x:Name="txtDescription" PlaceholderText="Description" Height="80" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Save" Width="100" Margin="5" Click="btnSave_Click"/>
                <Button Content="Cancel" Width="100" Margin="5" Click="btnCancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
