<Window x:Class="MunicipalServicesApp.AddServiceRequest"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Submit Service Request"
        Height="700" Width="550"
        WindowStartupLocation="CenterScreen"
        Background="#ecf0f1"
        ResizeMode="CanResize">

    <Border Margin="30" Background="White" CornerRadius="10" 
            BorderBrush="#bdc3c7" BorderThickness="2">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER SECTION -->
            <StackPanel Grid.Row="0" Margin="0,0,0,25">
                <TextBlock Text="📝 Submit Service Request"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#2c3e50"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Fill out the form to report an issue or request service"
                           FontSize="13"
                           Foreground="#7f8c8d"
                           HorizontalAlignment="Center"
                           Margin="0,8,0,0"/>
            </StackPanel>

            <!-- FORM SECTION -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <!-- Title Field -->
                    <TextBlock Text="Request Title *" 
                               FontWeight="Bold" 
                               FontSize="14"
                               Foreground="#34495e"
                               Margin="0,0,0,8"/>
                    <TextBox x:Name="txtTitle" 
                             Height="40" 
                             FontSize="14"
                             VerticalContentAlignment="Center"
                             Padding="10"
                             BorderBrush="#3498db"
                             BorderThickness="2"
                             Margin="0,0,0,20"/>

                    <!-- Category Dropdown -->
                    <TextBlock Text="Category *" 
                               FontWeight="Bold" 
                               FontSize="14"
                               Foreground="#34495e"
                               Margin="0,0,0,8"/>
                    <ComboBox x:Name="cmbCategory" 
                              Height="40" 
                              FontSize="14"
                              BorderBrush="#3498db"
                              BorderThickness="2"
                              Padding="8"
                              Margin="0,0,0,20">
                        <ComboBoxItem Content="Road Maintenance"/>
                        <ComboBoxItem Content="Utilities"/>
                        <ComboBoxItem Content="Water Services"/>
                        <ComboBoxItem Content="Sanitation"/>
                        <ComboBoxItem Content="Traffic Management"/>
                        <ComboBoxItem Content="Parks and Recreation"/>
                        <ComboBoxItem Content="Public Safety"/>
                        <ComboBoxItem Content="Public Works"/>
                        <ComboBoxItem Content="Infrastructure"/>
                        <ComboBoxItem Content="Other"/>
                    </ComboBox>

                    <!-- Priority Dropdown -->
                    <TextBlock Text="Priority Level *" 
                               FontWeight="Bold" 
                               FontSize="14"
                               Foreground="#34495e"
                               Margin="0,0,0,8"/>
                    <ComboBox x:Name="cmbPriority" 
                              Height="40" 
                              FontSize="14"
                              BorderBrush="#3498db"
                              BorderThickness="2"
                              Padding="8"
                              Margin="0,0,0,20">
                        <ComboBoxItem Content="Low" IsSelected="True"/>
                        <ComboBoxItem Content="Medium"/>
                        <ComboBoxItem Content="High"/>
                        <ComboBoxItem Content="Critical"/>
                    </ComboBox>

                    <!-- Description Field -->
                    <TextBlock Text="Description *" 
                               FontWeight="Bold" 
                               FontSize="14"
                               Foreground="#34495e"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Please provide detailed information about the issue"
                               FontSize="12"
                               Foreground="#95a5a6"
                               Margin="0,0,0,8"/>
                    <TextBox x:Name="txtDescription" 
                             Height="120" 
                             FontSize="14"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             Padding="10"
                             BorderBrush="#3498db"
                             BorderThickness="2"
                             Margin="0,0,0,20"/>

                    <!-- Location Field -->
                    <TextBlock Text="Location (Optional)" 
                               FontWeight="Bold" 
                               FontSize="14"
                               Foreground="#34495e"
                               Margin="0,0,0,8"/>
                    <TextBox x:Name="txtLocation" 
                             Height="40" 
                             FontSize="14"
                             VerticalContentAlignment="Center"
                             Padding="10"
                             BorderBrush="#95a5a6"
                             BorderThickness="1"
                             Margin="0,0,0,20"/>

                    <!-- Contact Information Section -->
                    <Border BorderBrush="#e0e0e0" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="15"
                            Background="#f9f9f9"
                            Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="📞 Contact Information (Optional)" 
                                       FontWeight="Bold" 
                                       FontSize="14"
                                       Foreground="#34495e"
                                       Margin="0,0,0,15"/>

                            <TextBlock Text="Your Name" 
                                       FontSize="13" 
                                       Foreground="#7f8c8d"
                                       Margin="0,0,0,6"/>
                            <TextBox x:Name="txtReporter" 
                                     Height="35" 
                                     FontSize="13"
                                     VerticalContentAlignment="Center"
                                     Padding="8"
                                     Margin="0,0,0,12"/>

                            <TextBlock Text="Email Address" 
                                       FontSize="13" 
                                       Foreground="#7f8c8d"
                                       Margin="0,0,0,6"/>
                            <TextBox x:Name="txtEmail" 
                                     Height="35" 
                                     FontSize="13"
                                     VerticalContentAlignment="Center"
                                     Padding="8"/>
                        </StackPanel>
                    </Border>

                    <!-- Required Fields Notice -->
                    <TextBlock Text="* Required fields must be filled out" 
                               FontSize="12" 
                               FontStyle="Italic"
                               Foreground="#e74c3c"
                               FontWeight="SemiBold"
                               Margin="0,15,0,0"/>
                </StackPanel>
            </ScrollViewer>

            <!-- BUTTON SECTION -->
            <Grid Grid.Row="2" Margin="0,25,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="btnCancel"
                        Grid.Column="0"
                        Content="✖ Cancel"
                        Height="45"
                        FontSize="15"
                        FontWeight="Bold"
                        Background="#95a5a6"
                        Foreground="White"
                        BorderThickness="0"
                        Margin="0,0,8,0"
                        Cursor="Hand"
                        Click="btnCancel_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#95a5a6"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#7f8c8d"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="btnSubmit"
                        Grid.Column="1"
                        Content="✓ Submit Request"
                        Height="45"
                        FontSize="15"
                        FontWeight="Bold"
                        Background="#27ae60"
                        Foreground="White"
                        BorderThickness="0"
                        Margin="8,0,0,0"
                        Cursor="Hand"
                        Click="btnSubmit_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#27ae60"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#229954"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

        </Grid>
    </Border>
</Window>