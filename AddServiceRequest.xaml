<Window x:Class="MunicipalServicesApp.AddServiceRequest"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Service Request" Height="400" Width="500">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Title:"/>
            <TextBox x:Name="txtTitle" />

            <TextBlock Text="Category:" Margin="0,5,0,0"/>
            <TextBox x:Name="txtCategory"/>

            <TextBlock Text="Priority:" Margin="0,5,0,0"/>
            <ComboBox x:Name="cmbPriority" SelectedIndex="2">
                <ComboBoxItem Content="Critical"/>
                <ComboBoxItem Content="High"/>
                <ComboBoxItem Content="Medium"/>
                <ComboBoxItem Content="Low"/>
            </ComboBox>

            <TextBlock Text="Description:" Margin="0,5,0,0"/>
            <TextBox x:Name="txtDescription" Height="80" AcceptsReturn="True"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Submit" Width="80" Click="Submit_Click"/>
            <Button Content="Cancel" Width="80" Margin="10,0,0,0" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
