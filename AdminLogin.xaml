<Window x:Class="MunicipalServicesApp.AdminLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Login" MinHeight="250" MinWidth="400" Height="350" Width="450"
        WindowStartupLocation="CenterScreen" ResizeMode="CanResize">

    <!-- Gradient background -->
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFB3E5FC" Offset="0"/>
            <GradientStop Color="#FFE1F5FE" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Input fields -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Admin Login"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="SteelBlue"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Username and Password -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="0,0,0,15">
            <TextBlock Text="Username:" FontSize="14" Foreground="SteelBlue" Margin="0,0,0,5"/>
            <TextBox x:Name="txtUsername" Height="35" Margin="0,0,0,10"
                     HorizontalAlignment="Stretch" Padding="5" BorderBrush="SteelBlue" BorderThickness="1"
                     Background="White" FontSize="14"/>

            <TextBlock Text="Password:" FontSize="14" Foreground="SteelBlue" Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtPassword" Height="35"
                         HorizontalAlignment="Stretch" Padding="5" BorderBrush="SteelBlue" BorderThickness="1"
                         Background="White" FontSize="14"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Login" Width="120" Margin="0,0,10,0" Click="Login_Click"
                    Background="SteelBlue" Foreground="White" FontWeight="Bold" Height="35">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Background" Value="SteelBlue"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF1976D2"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="Cancel" Width="120" Click="Cancel_Click" Height="35"
                    Background="#FFB0BEC5" Foreground="White" FontWeight="Bold" Margin="0,0,0,0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Background" Value="#FFB0BEC5"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF90A4AE"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
