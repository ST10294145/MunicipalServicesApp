<Window x:Class="MunicipalServicesApp.AdminLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Login" Height="250" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Admin Login" FontSize="18" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <TextBox x:Name="txtUsername" Text="Username" Foreground="Gray" Margin="0,0,0,10"
                     GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
            <PasswordBox x:Name="txtPassword" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Login" Width="100" Margin="5" Click="btnLogin_Click"/>
                <Button Content="Cancel" Width="100" Margin="5" Click="btnCancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
