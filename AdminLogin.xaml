<Window x:Class="MunicipalServicesApp.AdminLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Login" MinHeight="250" MinWidth="400" Height="350" Width="450" WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Username/Password StackPanel -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Admin Login"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="SteelBlue"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Username and Password -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="0,0,0,15">
            <TextBlock Text="Username:" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="txtUsername" Height="35" Margin="0,0,0,10"
                     HorizontalAlignment="Stretch"/>
            <TextBlock Text="Password:" FontSize="14" Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtPassword" Height="35"
                         HorizontalAlignment="Stretch"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Login" Width="120" Margin="0,0,10,0" Click="Login_Click"/>
            <Button Content="Cancel" Width="120" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
