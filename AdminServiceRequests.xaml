<Window x:Class="MunicipalServicesApp.AdminServiceRequests"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin - Service Requests" Height="500" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="dgRequests" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" Grid.Row="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding IssueID}" Width="Auto"/>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*"/>
                <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="*"/>
                <DataGridTextColumn Header="Priority" Binding="{Binding Priority}" Width="Auto"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="Auto"/>
                <DataGridTextColumn Header="Reporter" Binding="{Binding Reporter}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1" Margin="0,10,0,0">
            <Button Content="Update Status" Width="100" Click="UpdateStatus_Click"/>
            <Button Content="Update Priority" Width="120" Margin="10,0,0,0" Click="UpdatePriority_Click"/>
            <Button Content="Refresh" Width="80" Margin="10,0,0,0" Click="Refresh_Click"/>
        </StackPanel>
    </Grid>
</Window>
