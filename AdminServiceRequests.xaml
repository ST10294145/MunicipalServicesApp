<Window x:Class="MunicipalServicesApp.AdminServiceRequests"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin - Service Request Management"
        Height="750" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#f0f4f8">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="🔒 Admin - Service Request Management"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#2c3e50"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="View and manage all service requests"
                       FontSize="14"
                       Foreground="#7f8c8d"
                       HorizontalAlignment="Center"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Filter Panel -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="8" 
                Padding="15" 
                Margin="0,0,0,15"
                BorderBrush="#ddd" 
                BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Filter by Status -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="Filter by Status:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ComboBox x:Name="cmbStatusFilter" 
                              Height="35" 
                              FontSize="14"
                              SelectionChanged="cmbStatusFilter_SelectionChanged">
                        <ComboBoxItem Content="All Statuses"/>
                        <ComboBoxItem Content="Pending" IsSelected="True"/>
                        <ComboBoxItem Content="In Progress"/>
                        <ComboBoxItem Content="Resolved"/>
                        <ComboBoxItem Content="Closed"/>
                    </ComboBox>
                </StackPanel>

                <!-- Filter by Priority -->
                <StackPanel Grid.Column="1" Margin="0,0,10,0">
                    <TextBlock Text="Filter by Priority:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ComboBox x:Name="cmbPriorityFilter" 
                              Height="35" 
                              FontSize="14"
                              SelectionChanged="cmbPriorityFilter_SelectionChanged">
                        <ComboBoxItem Content="All Priorities" IsSelected="True"/>
                        <ComboBoxItem Content="Critical"/>
                        <ComboBoxItem Content="High"/>
                        <ComboBoxItem Content="Medium"/>
                        <ComboBoxItem Content="Low"/>
                    </ComboBox>
                </StackPanel>

                <!-- Filter by Category -->
                <StackPanel Grid.Column="2" Margin="0,0,10,0">
                    <TextBlock Text="Filter by Category:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ComboBox x:Name="cmbCategoryFilter" 
                              Height="35" 
                              FontSize="14"
                              SelectionChanged="cmbCategoryFilter_SelectionChanged">
                        <ComboBoxItem Content="All Categories" IsSelected="True"/>
                    </ComboBox>
                </StackPanel>

                <!-- Refresh Button -->
                <Button Grid.Column="3" 
                        x:Name="btnRefreshList"
                        Content="🔄 Refresh"
                        Width="100"
                        Height="35"
                        Background="#3498db"
                        Foreground="White"
                        FontWeight="Bold"
                        VerticalAlignment="Bottom"
                        Click="btnRefreshList_Click"
                        Cursor="Hand"/>
            </Grid>
        </Border>

        <!-- DataGrid - Service Requests List -->
        <Border Grid.Row="2" 
                Background="White" 
                CornerRadius="8" 
                Padding="10"
                BorderBrush="#ddd" 
                BorderThickness="1">
            <DataGrid x:Name="dgRequests"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      HeadersVisibility="Column"
                      GridLinesVisibility="Horizontal"
                      AlternatingRowBackground="#f9f9f9"
                      SelectionChanged="dgRequests_SelectionChanged"
                      FontSize="13">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding IssueID}" Width="80"/>
                    <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*"/>
                    <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="140"/>
                    <DataGridTextColumn Header="Priority" Binding="{Binding Priority}" Width="80"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                    <DataGridTextColumn Header="Reporter" Binding="{Binding Reporter}" Width="120"/>
                    <DataGridTextColumn Header="Date" Binding="{Binding DateReported, StringFormat='{}{0:yyyy-MM-dd}'}" Width="100"/>
                    <DataGridTextColumn Header="Days Open" Binding="{Binding DaysOpen}" Width="80"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Selected Request Details -->
        <Border Grid.Row="3" 
                Background="White" 
                CornerRadius="8" 
                Padding="20" 
                Margin="0,15,0,15"
                BorderBrush="#ddd" 
                BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Request Details -->
                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                    <TextBlock Text="Selected Request Details"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>

                    <TextBlock x:Name="txtSelectedDetails"
                               FontSize="13"
                               TextWrapping="Wrap"
                               Text="Select a request from the list above to view details and update status."/>
                </StackPanel>

                <!-- Status Update Panel -->
                <Border Grid.Column="1" 
                        Background="#ecf0f1" 
                        CornerRadius="5" 
                        Padding="15"
                        BorderBrush="#bdc3c7"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Update Status"
                                   FontSize="15"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Change Status To:"
                                   FontSize="12"
                                   Margin="0,0,0,5"/>

                        <ComboBox x:Name="cmbNewStatus" 
                                  Height="35" 
                                  FontSize="14"
                                  Margin="0,0,0,10"
                                  IsEnabled="False">
                            <ComboBoxItem Content="Pending"/>
                            <ComboBoxItem Content="In Progress"/>
                            <ComboBoxItem Content="Resolved"/>
                            <ComboBoxItem Content="Closed"/>
                        </ComboBox>

                        <Button x:Name="btnUpdateStatus"
                                Content="✓ Update Status"
                                Height="40"
                                Background="#27ae60"
                                Foreground="White"
                                FontWeight="Bold"
                                FontSize="14"
                                IsEnabled="False"
                                Click="btnUpdateStatus_Click"
                                Cursor="Hand"/>

                        <TextBlock x:Name="txtUpdateMessage"
                                   FontSize="11"
                                   Foreground="#27ae60"
                                   TextWrapping="Wrap"
                                   Margin="0,10,0,0"
                                   Text=""/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Bottom Action Bar -->
        <Border Grid.Row="4" 
                Background="White" 
                CornerRadius="8" 
                Padding="15"
                BorderBrush="#ddd" 
                BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           x:Name="txtStatusBar"
                           Text="Ready"
                           VerticalAlignment="Center"
                           FontSize="13"
                           Foreground="#555"/>

                <Button Grid.Column="1"
                        x:Name="btnClose"
                        Content="← Back to Main Menu"
                        Width="180"
                        Height="40"
                        Background="#95a5a6"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="14"
                        Click="btnClose_Click"
                        Cursor="Hand"/>
            </Grid>
        </Border>
    </Grid>
</Window>