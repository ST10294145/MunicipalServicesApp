<Window x:Class="MunicipalServicesApp.LocalEvents"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Local Events and Announcements" Height="450" Width="800">

    <Grid>
        <StackPanel>
            <TextBox x:Name="txtSearch" 
                     Width="200" 
                     Margin="0,0,0,10" 
                     Text="Search events..." 
                     Foreground="Gray"
                     GotFocus="txtSearch_GotFocus" LostFocus="txtSearch_LostFocus"/>
            <ComboBox x:Name="cmbCategory" Width="200" Margin="0,0,0,10"/>
            <DatePicker x:Name="dpDate" Width="200" Margin="0,0,0,10"/>
            <Button x:Name="btnSearch" Content="Search" Width="100" Click="btnSearch_Click"/>
            <DataGrid x:Name="dgEvents" AutoGenerateColumns="True" Height="200" Margin="0,10,0,10"/>
            <ListBox x:Name="lstRecommendations" Height="100"/>
        </StackPanel>
    </Grid>
    
</Window>
