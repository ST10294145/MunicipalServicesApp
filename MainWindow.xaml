<Window x:Class="MunicipalServicesApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MunicipalServicesApp"
        mc:Ignorable="d"
        Title="Municipal Service Portal" Height="450" Width="800" WindowStartupLocation="CenterScreen"
        Background="#f0f4f8">

    <Grid>
        <!-- Title -->
        <TextBlock Text="Municipal Service Portal"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#2c3e50"
                   HorizontalAlignment="Center"
                   Margin="0,40,0,0"/>

        <!-- Buttons -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="280">
            <Button x:Name="btnReportIssues" 
                    Content="📌 Report Issues" 
                    Height="40" FontSize="16"
                    Background="#3498db" Foreground="White"
                    Margin="0,0,0,15"
                    Click="Button_Click"/>

            <Button x:Name="btnLocalEvents" 
                    Content="📅 Local Events &amp; Announcements" 
                    Height="40" FontSize="16"
                    Background="#bdc3c7" Foreground="White"
                    Margin="0,0,0,15"
                    IsEnabled="False"/>

            <Button x:Name="btnServiceStatus" 
                    Content="📊 Service Request Status" 
                    Height="40" FontSize="16"
                    Background="#bdc3c7" Foreground="White"
                    Click="btnServiceStatus_Click"/>
        </StackPanel>
    </Grid>
</Window>
