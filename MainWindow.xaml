<Window x:Class="MunicipalServicesApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Municipal Service Portal"
        MinHeight="450" MinWidth="700"
        Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#f0f4f8">

    <DockPanel LastChildFill="True">
        <!-- Navigation Bar -->
        <Border Background="#2c3e50" DockPanel.Dock="Top" Height="60" Padding="10">
            <DockPanel>
                <!-- App Title -->
                <TextBlock Text="Municipal Service Portal"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"
                           DockPanel.Dock="Left"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <!-- View Reports Button (moved up here) -->
                    <Button x:Name="btnReportManagement" 
                            Content="View Reports" 
                            Width="120"
                            Height="35"
                            Margin="10,0,0,0"
                            Background="Orange"
                            Foreground="White"
                            FontWeight="Bold"
                            Click="btnReportManagement_Click"/>

                    <!-- Admin Login Button -->
                    <Button x:Name="btnAdminLogin"
                            Content="Admin Login"
                            Width="120"
                            Height="35"
                            Margin="10,0,0,0"
                            Background="SteelBlue"
                            Foreground="White"
                            FontWeight="Bold"
                            Click="btnAdminLogin_Click"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Main Content -->
        <Grid Margin="20">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
                <Button x:Name="btnReportIssues" 
                        Content="📌 Report Issues" 
                        Height="50" FontSize="16"
                        Background="DarkRed" Foreground="White"
                        Margin="0,0,0,15"
                        Click="Button_Click"/>

                <!-- Service Status moved here -->
                <Button x:Name="btnServiceStatus"
                        Content="📊 Service Status Tracker"
                        Height="50" FontSize="16"
                        Background="OrangeRed"
                        Foreground="White"
                        Margin="0,0,0,15"
                        Click="btnServiceStatus_Click"/>

                <Button x:Name="btnLocalEvents" 
                        Content="📅 Local Events &amp; Announcements" 
                        Height="50" FontSize="16"
                        Background="Purple" Foreground="White"
                        Margin="0,0,0,15"
                        Click="btnLocalEvents_Click"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
