<Window x:Class="MunicipalServicesApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Municipal Service Portal"
        MinHeight="450" MinWidth="700"
        Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#f0f4f8">

    <Grid Margin="20">
        <!-- Title -->
        <TextBlock Text="Municipal Service Portal"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#2c3e50"
                   HorizontalAlignment="Center"
                   Margin="0,30,0,0"/>

        <!-- Main Buttons -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <Button x:Name="btnReportIssues" 
                    Content="📌 Report Issues" 
                    Height="50" FontSize="16"
                    Background="DarkRed" Foreground="White"
                    Margin="0,0,0,15"
                    Click="Button_Click"/>

            <Button x:Name="btnReportManagement" 
                    Content="👁️ View Reports" 
                    Height="50" FontSize="16"
                    Background="Orange" Foreground="White"
                    Margin="0,0,0,15"
                    Click="btnReportManagement_Click"/>

            <Button x:Name="btnLocalEvents" 
                    Content="📅 Local Events &amp; Announcements" 
                    Height="50" FontSize="16"
                    Background="Purple" Foreground="White"
                    Margin="0,0,0,15"
                    IsEnabled="True" Click="btnLocalEvents_Click"/>
            

            <Button x:Name="btnServiceStatus" 
                    Content="📊 Service Request Status" 
                    Height="50" FontSize="16"
                    Background="LightSkyBlue" Foreground="White"
                    IsEnabled="False"/>
        </StackPanel>

        <!-- Admin Login Button (Bottom Right) -->
        <Button x:Name="btnAdminLogin"
                Content="Admin Login"
                Width="120"
                Height="35"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,20,20"
                Background="SteelBlue"
                Foreground="White"
                FontWeight="Bold"
                Click="btnAdminLogin_Click"/>
    </Grid>
</Window>
