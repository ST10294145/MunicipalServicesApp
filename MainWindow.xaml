<Window x:Class="MunicipalServicesApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Municipal Service Portal"
        MinHeight="650" MinWidth="900"
        Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#f0f4f8">

    <Window.Resources>
        <!-- Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.85"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Nav Button Style -->
        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Global Card Shadow -->
        <DropShadowEffect x:Key="CardShadow"
                          BlurRadius="15"
                          ShadowDepth="3"
                          Opacity="0.2"
                          Color="#000000"/>
    </Window.Resources>

    <DockPanel LastChildFill="True">
        <!-- Navigation Bar -->
        <Border Background="#2c3e50" DockPanel.Dock="Top" Height="70" Padding="20,0">
            <DockPanel>
                <!-- App Title -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" DockPanel.Dock="Left">
                    <TextBlock Text="🏛️" FontSize="28" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <StackPanel>
                        <TextBlock Text="Municipal Service Portal"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                        <TextBlock Text="Your Community, Your Voice"
                                   FontSize="11"
                                   Foreground="#95a5a6"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Navigation Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button x:Name="btnAdminLogin"
                            Content="🔐 Admin Login"
                            Style="{StaticResource NavButton}"
                            Background="#3498db"
                            Click="btnAdminLogin_Click"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid>
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#f0f4f8" Offset="0"/>
                    <GradientStop Color="#e8eef3" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Welcome Section -->
            <StackPanel Grid.Row="0" Margin="40,30,40,20" HorizontalAlignment="Center">
                <TextBlock Text="Welcome to Your Municipal Services"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="#2c3e50"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"/>
                <TextBlock Text="Report issues, manage service requests, and stay informed about local events"
                           FontSize="16"
                           Foreground="#7f8c8d"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"
                           TextAlignment="Center"/>
            </StackPanel>

            <!-- Service Cards -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel VerticalAlignment="Top" 
                            HorizontalAlignment="Center" 
                            Width="700"
                            Margin="0,0,0,40">

                    <!-- USER SERVICES SECTION -->
                    <TextBlock Text="👤 User Services"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#2c3e50"
                               Margin="0,0,0,20"/>

                    <!-- Report Issues Card -->
                    <Border Background="White" 
                            CornerRadius="12" 
                            Padding="25"
                            Margin="0,0,0,15"
                            Effect="{StaticResource CardShadow}">
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Left" 
                                       Text="📌" 
                                       FontSize="40" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,20,0"/>
                            <StackPanel DockPanel.Dock="Left" VerticalAlignment="Center">
                                <TextBlock Text="Report Issues"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="#2c3e50"/>
                                <TextBlock Text="Submit problems in your community (potholes, streetlights, etc.)"
                                           FontSize="13"
                                           Foreground="#95a5a6"
                                           Margin="0,5,0,0"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                            <Button x:Name="btnReportIssues"
                                    Content="Report Now"
                                    Style="{StaticResource ModernButton}"
                                    Background="#e74c3c"
                                    HorizontalAlignment="Right"
                                    Padding="20,10"
                                    Click="Button_Click"/>
                        </DockPanel>
                    </Border>

                    <!-- Add Service Request Card -->
                    <Border Background="White" 
                            CornerRadius="12" 
                            Padding="25"
                            Margin="0,0,0,15"
                            Effect="{StaticResource CardShadow}">
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Left" 
                                       Text="➕" 
                                       FontSize="40" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,20,0"/>
                            <StackPanel DockPanel.Dock="Left" VerticalAlignment="Center">
                                <TextBlock Text="Submit Service Request"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="#2c3e50"/>
                                <TextBlock Text="Request municipal services (repairs, maintenance, permits)"
                                           FontSize="13"
                                           Foreground="#95a5a6"
                                           Margin="0,5,0,0"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                            <Button x:Name="btnAddServiceRequest"
                                    Content="New Request"
                                    Style="{StaticResource ModernButton}"
                                    Background="#27ae60"
                                    HorizontalAlignment="Right"
                                    Padding="20,10"
                                    Click="btnServiceRequest_Click"/>
                        </DockPanel>
                    </Border>

                    <!-- View My Requests Card -->
                    <Border Background="White" 
                            CornerRadius="12" 
                            Padding="25"
                            Margin="0,0,0,15"
                            Effect="{StaticResource CardShadow}">
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Left" 
                                       Text="📋" 
                                       FontSize="40" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,20,0"/>
                            <StackPanel DockPanel.Dock="Left" VerticalAlignment="Center">
                                <TextBlock Text="View My Requests"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="#2c3e50"/>
                                <TextBlock Text="Track status of your submitted service requests"
                                           FontSize="13"
                                           Foreground="#95a5a6"
                                           Margin="0,5,0,0"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                            <Button x:Name="btnViewMyRequests"
                                    Content="View Status"
                                    Style="{StaticResource ModernButton}"
                                    Background="#f39c12"
                                    HorizontalAlignment="Right"
                                    Padding="20,10"
                                    Click="btnServiceStatus_Click"/>
                        </DockPanel>
                    </Border>

                    <!-- Local Events Card -->
                    <Border Background="White" 
                            CornerRadius="12" 
                            Padding="25"
                            Margin="0,0,0,30"
                            Effect="{StaticResource CardShadow}">
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Left" 
                                       Text="📅" 
                                       FontSize="40" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,20,0"/>
                            <StackPanel DockPanel.Dock="Left" VerticalAlignment="Center">
                                <TextBlock Text="Local Events &amp; Announcements"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="#2c3e50"/>
                                <TextBlock Text="Stay updated with community news and events"
                                           FontSize="13"
                                           Foreground="#95a5a6"
                                           Margin="0,5,0,0"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                            <Button x:Name="btnLocalEvents"
                                    Content="Explore"
                                    Style="{StaticResource ModernButton}"
                                    Background="#8e44ad"
                                    HorizontalAlignment="Right"
                                    Padding="20,10"
                                    Click="btnLocalEvents_Click"/>
                        </DockPanel>
                    </Border>

                    <!-- ADMIN SERVICES SECTION -->
                    <TextBlock Text="⚙️ Admin Services"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#2c3e50"
                               Margin="0,10,0,20"/>

                    <!-- Manage Service Requests Card -->
                    <Border Background="White" 
                            CornerRadius="12" 
                            Padding="25"
                            Margin="0,0,0,15"
                            Effect="{StaticResource CardShadow}">
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Left" 
                                       Text="🔧" 
                                       FontSize="40" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,20,0"/>
                            <StackPanel DockPanel.Dock="Left" VerticalAlignment="Center">
                                <TextBlock Text="Manage Service Requests"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="#2c3e50"/>
                                <TextBlock Text="View all requests, update status and priority (Admin Only)"
                                           FontSize="13"
                                           Foreground="#95a5a6"
                                           Margin="0,5,0,0"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                            <Button x:Name="btnManageRequests"
                                    Content="Manage"
                                    Style="{StaticResource ModernButton}"
                                    Background="#16a085"
                                    HorizontalAlignment="Right"
                                    Padding="20,10"
                                    Click="btnManageRequests_Click"/>
                        </DockPanel>
                    </Border>

                    <!-- View All Reports Card -->
                    <Border Background="White" 
                            CornerRadius="12" 
                            Padding="25"
                            Margin="0,0,0,15"
                            Effect="{StaticResource CardShadow}">
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Left" 
                                       Text="📊" 
                                       FontSize="40" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,20,0"/>
                            <StackPanel DockPanel.Dock="Left" VerticalAlignment="Center">
                                <TextBlock Text="View All Reports"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="#2c3e50"/>
                                <TextBlock Text="Access all submitted issue reports (Admin Only)"
                                           FontSize="13"
                                           Foreground="#95a5a6"
                                           Margin="0,5,0,0"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                            <Button x:Name="btnReportManagement"
                                    Content="View Reports"
                                    Style="{StaticResource ModernButton}"
                                    Background="#e67e22"
                                    HorizontalAlignment="Right"
                                    Padding="20,10"
                                    Click="btnReportManagement_Click"/>
                        </DockPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Footer -->
        <Border DockPanel.Dock="Bottom" 
                Background="#34495e" 
                Height="40" 
                Padding="20,0">
            <TextBlock Text="© 2024 Municipal Services Portal. All rights reserved."
                       FontSize="12"
                       Foreground="#95a5a6"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
        </Border>
    </DockPanel>
</Window>