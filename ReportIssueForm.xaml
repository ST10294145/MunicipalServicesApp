<Window x:Class="MunicipalServicesApp.ReportIssueForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Report an Issue" Height="700" Width="600" WindowStartupLocation="CenterScreen"
        Background="#f0f4f8">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Report an Issue"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="#2c3e50"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- ✅ Scrollable Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10,0,10,0">

                <!-- Reporter -->
                <Label Content="Your Name:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtName" Height="30" Margin="0,0,0,15" />

                <!-- Email -->
                <Label Content="Your Email:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtEmail" Height="30" Margin="0,0,0,15"/>

                <!-- Province -->
                <Label Content="Province:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbProvince" Height="30" Margin="0,0,0,15">
                    <ComboBoxItem Content="Eastern Cape"/>
                    <ComboBoxItem Content="Free State"/>
                    <ComboBoxItem Content="Gauteng"/>
                    <ComboBoxItem Content="KwaZulu-Natal"/>
                    <ComboBoxItem Content="Limpopo"/>
                    <ComboBoxItem Content="Mpumalanga"/>
                    <ComboBoxItem Content="Northern Cape"/>
                    <ComboBoxItem Content="North West"/>
                    <ComboBoxItem Content="Western Cape"/>
                </ComboBox>

                <!-- Street Address -->
                <Label Content="Street Address:"/>
                <TextBox x:Name="txtStreetAddress" Height="30" Margin="0,0,0,10"/>


                <!-- City -->
                <Label Content="City:"/>
                <TextBox x:Name="txtCity" Height="30" Margin="0,0,0,10"/>

                <!-- Category -->
                <Label Content="Category:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbCategory" Height="30" Margin="0,0,0,15">
                    <ComboBoxItem Content="Water Leak"/>
                    <ComboBoxItem Content="Electricity Outage"/>
                    <ComboBoxItem Content="Pothole"/>
                    <ComboBoxItem Content="Other"/>
                </ComboBox>

                <!-- Title -->
                <Label Content="Title:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtTitle" Height="30" Margin="0,0,0,15"/>

                <!-- Description -->
                <Label Content="Description:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtDescription" Height="120" Margin="0,0,0,15" 
                         TextWrapping="Wrap" AcceptsReturn="True" 
                         BorderBrush="SteelBlue" BorderThickness="2"
                         Background="White" Foreground="Black"/>

                <!-- File Attachment -->
                <Label Content="Attach File:" FontWeight="Bold" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <Button x:Name="btnAttachFile" Content="Attach File" Width="120" Height="30" Click="AttachFile_Click"/>
                    <TextBlock x:Name="txtFilePath" Text="No file selected" Margin="15,0,0,0" VerticalAlignment="Center" Foreground="#555"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Submit" Width="120" Height="35" Margin="10,0" Background="#27ae60" Foreground="White" Click="Submit_Click"/>
            <Button Content="Cancel" Width="120" Height="35" Margin="10,0" Background="#c0392b" Foreground="White" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
