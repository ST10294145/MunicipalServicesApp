<Window x:Class="MunicipalServicesApp.ReportIssueForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Report an Issue" Height="600" Width="600" WindowStartupLocation="CenterScreen"
        Background="#f0f4f8">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Report an Issue"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#2c3e50"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Form -->
        <StackPanel Grid.Row="1" Margin="0,10,0,10">

            <!-- Reporter -->
            <Label Content="Your Name:"/>
            <TextBox x:Name="txtName" 
                     Height="30" 
                     Margin="0,0,0,10" TextChanged="txtReporter_TextChanged"/>

            <!-- Email -->
            <Label Content="Your Email:"/>
            <TextBox x:Name="txtEmail" 
                     Height="30" 
                     Margin="0,0,0,10"/>

            <!-- Province -->
            <Label Content="Province:"/>
            <ComboBox x:Name="cmbProvince" Height="30" Margin="0,0,0,10">
                <ComboBoxItem Content="Eastern Cape"/>
                <ComboBoxItem Content="Free State"/>
                <ComboBoxItem Content="Gauteng"/>
                <ComboBoxItem Content="KwaZulu-Natal"/>
                <ComboBoxItem Content="Limpopo"/>
                <ComboBoxItem Content="Mpumalanga"/>
                <ComboBoxItem Content="Northern Cape"/>
                <ComboBoxItem Content="North West"/>
                <ComboBoxItem Content="Western Cape"/>
            </ComboBox>

            <!-- Category -->
            <Label Content="Category:"/>
            <ComboBox x:Name="cmbCategory" Height="30" Margin="0,0,0,10">
                <ComboBoxItem Content="Water Leak"/>
                <ComboBoxItem Content="Electricity Outage"/>
                <ComboBoxItem Content="Pothole"/>
                <ComboBoxItem Content="Other"/>
            </ComboBox>

            <!-- Title -->
            <Label Content="Title:"/>
            <TextBox x:Name="txtTitle" 
                     Height="30" 
                     Margin="0,0,0,10"/>

            <!-- Description -->
            <Label Content="Description:"/>
            <TextBox x:Name="txtDescription" 
                     Height="100"  
                     Margin="0,0,0,10" 
                     TextWrapping="Wrap" 
                     AcceptsReturn="True" 
                     BorderBrush="SteelBlue" 
                     BorderThickness="2"
                     Background="White"
                     Foreground="Black"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Submit" Width="100" Margin="10,0" Background="#27ae60" Foreground="White" Click="Submit_Click"/>
            <Button Content="Cancel" Width="100" Margin="10,0" Background="#c0392b" Foreground="White" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
