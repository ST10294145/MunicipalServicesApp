<Window x:Class="MunicipalServicesApp.ReportManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MunicipalServicesApp"
        mc:Ignorable="d"
        Title="Report Management"
        MinHeight="400" MinWidth="600"
        Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <!-- Gradient background -->
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFB3E5FC" Offset="0"/>
            <GradientStop Color="#FFE1F5FE" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Reported Issues"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="SteelBlue"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,15"/>

        <!-- Issues DataGrid -->
        <DataGrid x:Name="dgIssues"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  AlternatingRowBackground="#e9eef5"
                  GridLinesVisibility="None"
                  HeadersVisibility="Column"
                  RowHeight="35"
                  VerticalAlignment="Stretch"
                  HorizontalAlignment="Stretch"
                  Margin="0"
                  MouseDoubleClick="dgIssues_MouseDoubleClick"
                  ColumnWidth="*">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Issue ID" Binding="{Binding IssueID}" Width="*" />
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*" />
                <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="*" />
                <DataGridTextColumn Header="Province" Binding="{Binding Province}" Width="*" />
                <DataGridTextColumn Header="City" Binding="{Binding City}" Width="*" />
                <DataGridTextColumn Header="Street Address" Binding="{Binding StreetAddress}" Width="*" />
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*" />
                <DataGridTextColumn Header="Reported On" Binding="{Binding DateReported}" Width="*" />
                <DataGridTextColumn Header="SLA Deadline" Binding="{Binding SLADeadline}" Width="*" />
                <DataGridTextColumn Header="Attachment" Binding="{Binding FileName}" Width="*" />
                <DataGridTextColumn Header="Feedback" Binding="{Binding Feedback}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Buttons Panel -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Back button -->
            <Button Content="⬅ Back to Main Menu"
                    Width="200" Height="40"
                    HorizontalAlignment="Left"
                    Background="SteelBlue" Foreground="White"
                    FontWeight="SemiBold"
                    Margin="0,10,0,0"
                    Click="Back_Click"
                    Grid.Column="0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF1976D2"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Logout button -->
            <Button x:Name="btnLogout"
                    Content="Logout"
                    Width="100" Height="35"
                    Background="Tomato"
                    Foreground="White"
                    FontWeight="Bold"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0"
                    Click="btnLogout_Click"
                    Grid.Column="2">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFD32F2F"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Grid>
</Window>
