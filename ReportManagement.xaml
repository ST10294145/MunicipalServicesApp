<Window x:Class="MunicipalServicesApp.ReportManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MunicipalServicesApp"
        mc:Ignorable="d"
        Title="ReportManagement" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Reported Issues"
                FontSize="24"
                FontWeight="Bold"
                Foreground="SteelBlue"
                HorizontalAlignment="Center"
                Margin="0,0,0,15"/>

        <!-- Issues Table -->
        <DataGrid x:Name="dgIssues"
               Grid.Row="1"
               AutoGenerateColumns="False"
               IsReadOnly="True"
               CanUserAddRows="False"
               AlternatingRowBackground="#e9eef5"
               GridLinesVisibility="None"
               HeadersVisibility="Column"
               RowHeight="35"
               Margin="0,0,0,15"
               MouseDoubleClick="dgIssues_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Issue ID" Binding="{Binding IssueID}" />
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" />
                <DataGridTextColumn Header="Category" Binding="{Binding Category}" />
                <DataGridTextColumn Header="Province" Binding="{Binding Province}" />
                <DataGridTextColumn Header="City" Binding="{Binding City}" />
                <DataGridTextColumn Header="Street Address" Binding="{Binding StreetAddress}" />
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" />
                <DataGridTextColumn Header="Reported On" Binding="{Binding DateReported}" />
                <DataGridTextColumn Header="SLA Deadline" Binding="{Binding SLADeadline}" />
                <DataGridTextColumn Header="Attachment" Binding="{Binding FileName}" />
                <DataGridTextColumn Header="Feedback" Binding="{Binding Feedback}" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Back button -->
        <Button Content="⬅ Back to Main Menu"
             Grid.Row="2"
             Width="200" Height="40"
             HorizontalAlignment="Left"
             Background="SteelBlue" Foreground="White"
             FontWeight="SemiBold"
             Margin="0,10,0,0"
             Click="Back_Click"/>
    </Grid>
</Window>
