<Window x:Class="MunicipalServicesApp.ReportManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MunicipalServicesApp"
        mc:Ignorable="d"
        Title="ReportManagement" Height="450" Width="800" MinHeight="400" MinWidth="600">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- DataGrid fills remaining space -->
            <RowDefinition Height="Auto"/>
            <!-- Back button -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Reported Issues"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="SteelBlue"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,15"/>

        <!-- Issues Table -->
        <DataGrid x:Name="dgIssues"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  AlternatingRowBackground="#e9eef5"
                  GridLinesVisibility="None"
                  HeadersVisibility="Column"
                  RowHeight="35"
                  VerticalAlignment="Stretch"
                  HorizontalAlignment="Stretch"
                  Margin="0"
                  MouseDoubleClick="dgIssues_MouseDoubleClick"
                  ColumnWidth="*">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Issue ID" Binding="{Binding IssueID}" Width="*" />
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*" />
                <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="*" />
                <DataGridTextColumn Header="Province" Binding="{Binding Province}" Width="*" />
                <DataGridTextColumn Header="City" Binding="{Binding City}" Width="*" />
                <DataGridTextColumn Header="Street Address" Binding="{Binding StreetAddress}" Width="*" />
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*" />
                <DataGridTextColumn Header="Reported On" Binding="{Binding DateReported}" Width="*" />
                <DataGridTextColumn Header="SLA Deadline" Binding="{Binding SLADeadline}" Width="*" />
                <DataGridTextColumn Header="Attachment" Binding="{Binding FileName}" Width="*" />
                <DataGridTextColumn Header="Feedback" Binding="{Binding Feedback}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Back button -->
        <Button Content="⬅ Back to Main Menu"
                Grid.Row="2"
                Width="200" Height="40"
                HorizontalAlignment="Left"
                Background="SteelBlue" Foreground="White"
                FontWeight="SemiBold"
                Margin="0,10,0,0"
                Click="Back_Click"/>

        <!--Logout Button-->
        <Button x:Name="btnLogout"
        Content="Logout"
        Width="80"
        Height="30"
        HorizontalAlignment="Right"
        VerticalAlignment="Top"
        Margin="0,10,10,0"
        Background="Tomato"
        Foreground="White"
        Click="btnLogout_Click"/>

    </Grid>
</Window>
