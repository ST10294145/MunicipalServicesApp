<Window x:Class="MunicipalServicesApp.ServiceStatus"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Service Status" Height="450" Width="800">
    <Grid Background="#f4f6f9" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Reported Issues"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="SteelBlue"
                   Margin="0,0,0,10"/>

        <!-- Table for issues -->
        <DataGrid x:Name="dgIssues" Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  AlternatingRowBackground="LightGray"
                  HeadersVisibility="Column"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Reporter" Binding="{Binding ReporterName}" Width="150"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="120"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Back button -->
        <Button Content="Back to Main Menu" Grid.Row="2"
                Width="180" Height="35"
                HorizontalAlignment="Left"
                Background="SteelBlue" Foreground="White"
                Click="Back_Click"/>
    </Grid>
</Window>
