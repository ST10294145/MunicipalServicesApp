<Window x:Class="MunicipalServicesApp.UpdatePriorityWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Priority" Height="200" Width="350"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Update Request Priority" 
                   FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

        <TextBlock Grid.Row="1" Text="Current Priority:" Margin="0,0,0,5"/>
        <TextBlock Grid.Row="2" x:Name="CurrentPriorityText" 
                   FontWeight="Bold" Margin="0,0,0,15"/>

        <StackPanel Grid.Row="3">
            <TextBlock Text="New Priority:" Margin="0,0,0,5"/>
            <ComboBox x:Name="PriorityComboBox" Height="30">
                <ComboBoxItem Content="Low"/>
                <ComboBoxItem Content="Medium"/>
                <ComboBoxItem Content="High"/>
                <ComboBoxItem Content="Critical"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Update" Width="80" Height="30" 
                    Margin="0,0,10,0" Click="UpdateButton_Click"
                    Background="#4CAF50" Foreground="White" 
                    BorderThickness="0" Cursor="Hand"/>
            <Button Content="Cancel" Width="80" Height="30" 
                    Click="CancelButton_Click"
                    Background="#f44336" Foreground="White" 
                    BorderThickness="0" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>